package uk.co.richtextformat.display {	import flash.events.Event;	import flash.events.MouseEvent;	import flash.display.Sprite;	import org.richtextformat.display.RolloverSprite;	import org.richtextformat.interfaces.IEnable;		public class AnimatedButton extends RolloverSprite implements IEnable 	{		public static const OVER						:String = "animatedButtonOver";		public static const OUT							:String = "animatedButtonOut";		public static const PRESSED						:String = "animatedButtonPressed";		public static const RELEASED					:String = "animatedButtonReleased";		public static const RELEASED_OUTSIDE			:String = "animatedButtonReleasedOutside";				// constructor		public function AnimatedButton (mc:Sprite)		{			super(mc);			_init();		}				private function _init ():void		{			reset();		}				override public function reset ():void		{			enable();		}				override public function enable ():void		{			_rollover.buttonMode = 				_rollover.useHandCursor = 				true;			super.enable();		}				override public function disable ():void		{			_rollover.buttonMode = 				_rollover.useHandCursor = 				false;			super.disable();		}				override protected function _dispatchOver ():void		{			dispatchEvent(new Event(OVER));		}				override protected function _dispatchOut ():void		{			dispatchEvent(new Event(OUT));		}				override protected function _dispatchPressed ():void		{			dispatchEvent(new Event(PRESSED));		}				override protected function _dispatchReleased ():void		{			dispatchEvent(new Event(RELEASED));		}				override protected function _dispatchReleasedOutside ():void		{			dispatchEvent(new Event(RELEASED_OUTSIDE));		}	}}